<% content_for :profile do %>
<h1>Your Profile</h1>

<p>First Name: <%= @user.first_name %></p>
<p>Last Name: <%= @user.last_name %></p>
<p>Email: <%= @user.email %></p>

<p><%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-warning" %></p>
<p><%= link_to "Delete Account", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete your account?"} %></p>
<% end %>
