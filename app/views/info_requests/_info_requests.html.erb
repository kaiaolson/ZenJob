<% if @info_requests.length >= 1 %>
<table width="100%" class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th width="25%">Title</th>
      <th>Category</th>
      <th>Completed</th>
      <% if current_user.consultant? %>
        <th>Client</th>
      <% else %>
        <th>Consultant</th>
      <% end %>
      <th class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @info_requests.each do |info_request| %>
      <tr>
        <td><%= info_request.id %></td>
        <td><%= info_request.title %></td>
        <td><%= info_request.category_name %></td>
        <td><%= info_request.completed? %></td>
        <% if current_user.consultant? %>
        <td><%= info_request.client_name %></td>
        <td class="text-center">
            <%= link_to "View", info_request_path(info_request), class: "btn btn-info" %>
            <%= link_to "Edit", edit_info_request_path(info_request), class: "btn btn-warning" %>
            <%= link_to "Delete", info_request_path(info_request), method: :delete, data: {confirm: "Are you sure you want to delete this submission?"}, class: "btn btn-danger" %> </td>
        <% else %>
        <td><%= info_request.creator %></td>
        <td class="text-center"><%= link_to "View", info_request_path(info_request), class: "btn btn-primary" %>
            <%= link_to "Create Submission", new_info_request_submission_path(info_request), class: "btn btn-info" %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h3>No Requests!</h3>
<% end %>
