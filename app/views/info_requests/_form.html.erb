<%= simple_form_for @info_request do |f| %>
  <%= f.input :title%>
  <%= f.input :description%>
  <%= f.input :requirements%>
  <%= f.input :category_id, collection: Category.order("name"), default: 1  %>
  <%= f.input :relationship_id, label: "Client", collection: current_user.relationships, label_method: :client_name, value_method: :id, include_blank: false %>
  <%= f.submit "Create Request", class: "btn btn-primary" %>
<% end %>
