<%= simple_form_for :conversation, url: :conversations do |f| %>
  <%= f.input :recipients, hint: "Please enter recipients' emails, separated by commas." %>
  <%= f.input :subject %>
  <%= f.input :body, as: :text %>
  <div class="form-actions">
    <%= f.button :submit, 'Start Conversation', class: 'btn-primary' %>
    <%= f.button :submit, 'Cancel', type: :reset, class: 'btn-danger' %>
  </div>
<% end %>
